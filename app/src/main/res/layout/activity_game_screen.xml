                android:text="filler text\nuser info here"
                android:textColor="#27347A"
                android:textSize="50dp" />

            <Button
                android:id="@+id/player5Display"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text = "filler text\nuser info here"
