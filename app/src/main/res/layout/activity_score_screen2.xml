<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:layout_marginLeft="10dp"
    android:layout_marginRight="10dp"
    tools:context=".scoreScreen">

    <TextView
        android:id="@+id/textView"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_marginTop="10dp"
        android:fontFamily="@font/a_black_crown"
        android:gravity="center_horizontal"
        android:text="@string/scores"
        android:textAlignment="center"
        android:textAppearance="@style/TextAppearance.AppCompat.Display1"
        android:textColor="@color/navy"
        android:textSize="80sp"
        android:layout_weight="1"/>

    <TextView
        android:id="@+id/scoreOutputTV"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:text="@string/score_output_filler"
        android:layout_weight="5"/>

    <Button
        android:id="@+id/newGameScoreScreen"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_gravity="bottom"
        android:background="@drawable/button_border"
        android:fontFamily="@font/stay_happy"
        android:onClick="onClickNewGameScoreScreen"
        android:text="@string/new_game_button"
        android:textColor="@color/navy"
        android:textSize="60sp"
        android:layout_marginBottom="10dp"
        android:layout_weight="1"/>

</LinearLayout>